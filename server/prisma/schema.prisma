generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  phone    String?
  quiz     QuizAnswer[]
  stories  Story[]
  earlyAccessApplied Boolean  @default(false)
  earlyAccessAt      DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuizAnswer {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
  questionId     Int
  selectedOptions String
}

model Story {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  text      String
  createdAt DateTime @default(now())
}
